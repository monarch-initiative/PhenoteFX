<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorpane" stylesheets="@phenote.css" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.monarchinitiative.phenotefx.gui.main.PhenotePresenter">
    <BorderPane fx:id="bpane" stylesheets="@phenote.css" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <top>
            <HBox BorderPane.alignment="CENTER">
                    <MenuBar BorderPane.alignment="CENTER" HBox.hgrow="NEVER">
                        <Menu mnemonicParsing="false" text="File">
                            <MenuItem fx:id="newMenuItem" mnemonicParsing="false" onAction="#newFile" text="New"/>
                            <MenuItem fx:id="openFileMenuItem" mnemonicParsing="false" text="Open..."/>
                            <MenuItem fx:id="openByMimMenuItem" mnemonicParsing="false" onAction="#openByMIMnumber"
                                      text="Open by MIM number..." accelerator="Shortcut+M"/>
                            <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close"/>
                            <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" onAction="#savePhenoteFile"
                                      text="Save"/>
                            <MenuItem fx:id="saveAsMenuItem" mnemonicParsing="false" onAction="#saveAsPhenoteFile"
                                      text="Save As..."/>
                            <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#exitGui"
                                      text="Quit PhenoteFX"/>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <MenuItem mnemonicParsing="false" onAction="#importLocalHpObo"
                                      text="Import local hp.obo file"/>
                            <MenuItem mnemonicParsing="false" text="Delete"/>

                        </Menu>
                        <Menu mnemonicParsing="false" text="Setup">
                            <MenuItem fx:id="downloadMedgenMenuItem" mnemonicParsing="false" onAction="#downloadMedGen"
                                      text="Download Medgen HPO OMIM"/>
                            <MenuItem fx:id="downloadHPOmenuItem" mnemonicParsing="false" onAction="#downloadHPO"
                                      text="Download HPO"/>
                            <MenuItem mnemonicParsing="false" onAction="#setBiocuratorMenuItemClicked"
                                      text="Set Biocurator ID..."/>
                            <MenuItem mnemonicParsing="false" onAction="#setDefaultPhenoteFileDirectory"
                                      text="Set default directory for phenoteFX files..."/>
                            <MenuItem fx:id="showSettingsMenuItem" mnemonicParsing="false" onAction="#showSettings"
                                      text="Show settings"/>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Log">
                            <MenuItem mnemonicParsing="false" onAction="#showLog" text="Show log file"/>
                        </Menu>
                    </MenuBar>
                    <Region styleClass="menu-bar" HBox.hgrow="SOMETIMES"/>
                    <MenuBar HBox.hgrow="NEVER">
                        <Menu mnemonicParsing="false" text="Help">
                            <MenuItem mnemonicParsing="false" onAction="#showHelpWindow" text="Help"/>
                            <MenuItem mnemonicParsing="false" onAction="#aboutWindow" text="About"/>
                        </Menu>
                    </MenuBar>
            </HBox>
        </top>
        <bottom>
            <HBox minHeight="30.0" stylesheets="@phenote.css" BorderPane.alignment="CENTER_LEFT">
                <Label stylesheets="@phenote.css" text="PhenoteFX, Â© Monarch Initiative, 2018">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                    <styleClass>
                        <String fx:value="boxSpacing"/>
                        <String fx:value="mylabel"/>
                    </styleClass>
                </Label>
            </HBox>
        </bottom>
        <center>
            <VBox BorderPane.alignment="CENTER">
                <ScrollPane fitToWidth="true" hbarPolicy="ALWAYS" VBox.vgrow="ALWAYS">
                    <TableView fx:id="table">
                        <columns>
                            <TableColumn fx:id="diseaseIDcol" minWidth="30.0" prefWidth="90.0" text="Disease ID"/>
                            <TableColumn fx:id="diseaseNamecol" minWidth="30.0" prefWidth="120.0" text="Disease Name"/>
                            <TableColumn fx:id="phenotypeNameCol" minWidth="30.0" prefWidth="100.0" text="Phenotype"/>
                            <TableColumn fx:id="ageOfOnsetNamecol" minWidth="30.0" prefWidth="110.0" text="Onset"/>
                            <TableColumn fx:id="frequencyCol" minWidth="30.0" prefWidth="90.0" text="Frequency"/>
                            <TableColumn fx:id="sexCol" minWidth="30.0" prefWidth="70.0" text="Sex"/>
                            <TableColumn fx:id="negationCol" minWidth="30" prefWidth="75.0" text="Not?"/>
                            <TableColumn fx:id="modifierCol" minWidth="30" prefWidth="75.0" text="Modifier"/>
                            <TableColumn fx:id="descriptionCol" minWidth="30.0" prefWidth="120.0" text="Description"/>
                            <TableColumn fx:id="pubCol" minWidth="30.0" prefWidth="75.0" text="Pub"/>
                            <TableColumn fx:id="evidencecol" minWidth="30.0" prefWidth="90.0" text="Evidence"/>
                            <TableColumn fx:id="assignedByCol" minWidth="30" prefWidth="110.0" text="Assigned by"/>
                            <TableColumn fx:id="dateCreatedCol" minWidth="30" prefWidth="110.0" text="Date created"/>
                        </columns>
                    </TableView>
                </ScrollPane>
                <GridPane VBox.vgrow="NEVER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="385.0" minWidth="0.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="796.0" minWidth="10.0"/>
                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="435.0" minWidth="10.0"
                                           prefWidth="369.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="31.0" minHeight="10.0" prefHeight="31.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="36.0" minHeight="10.0" prefHeight="34.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label styleClass="mylabel" stylesheets="@phenote.css" text="Disease"/>
                    <TextField fx:id="diseaseNameTextField" minHeight="30.0" GridPane.columnIndex="1">
                        <GridPane.margin>
                            <Insets top="5.0"/>
                        </GridPane.margin>
                    </TextField>
                    <Label fx:id="diseaseIDlabel" minWidth="30.0" GridPane.columnIndex="2">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </GridPane.margin>
                    </Label>
                    <Label styleClass="mylabel" text="HPO Term" GridPane.rowIndex="1"/>
                    <TextField fx:id="hpoNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Button fx:id="setAllDiseaseNamesButton" minWidth="200.0" mnemonicParsing="false"
                            onAction="#setAllDiseasesNames" text="Set all rows to this label" GridPane.columnIndex="2">
                        <GridPane.margin>
                            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                        </GridPane.margin>
                    </Button>
                    <Label styleClass="mylabel" text="Age of onset" GridPane.rowIndex="2"/>
                    <ChoiceBox fx:id="ageOfOnsetChoiceBox" minHeight="30.0" prefWidth="270.0" GridPane.columnIndex="1"
                               GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets top="5.0"/>
                        </GridPane.margin>
                    </ChoiceBox>
                    <Label styleClass="mylabel" text="Evidence" GridPane.rowIndex="3"/>
                    <HBox prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <RadioButton fx:id="IEAbutton" mnemonicParsing="false" styleClass="mylabel" text="IEA"/>
                        <RadioButton fx:id="TASbutton" mnemonicParsing="false" styleClass="mylabel" text="TAS"/>
                        <RadioButton fx:id="PCSbutton" mnemonicParsing="false" styleClass="mylabel" text="PCS"/>
                        <RadioButton fx:id="ICEbutton" mnemonicParsing="false" styleClass="mylabel" text="ICE"/>
                    </HBox>
                    <Label styleClass="mylabel" text="Frequency" GridPane.rowIndex="4"/>
                    <Label styleClass="mylabel" text="Negation" GridPane.rowIndex="5"/>
                    <Label styleClass="mylabel" text="Description" GridPane.rowIndex="7"/>
                    <CheckBox fx:id="notBox" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false"
                              prefHeight="30.0" styleClass="mylabel" text="NOT" GridPane.columnIndex="1"
                              GridPane.rowIndex="5">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </GridPane.margin>
                    </CheckBox>
                    <TextField fx:id="descriptiontextField" minHeight="30.0" GridPane.columnIndex="1"
                               GridPane.rowIndex="7">
                        <GridPane.margin>
                            <Insets top="5.0"/>
                        </GridPane.margin>
                    </TextField>
                    <Label styleClass="mylabel" text="Source" GridPane.rowIndex="8"/>
                    <TextField fx:id="pubTextField" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="8">
                        <GridPane.margin>
                            <Insets top="5.0"/>
                        </GridPane.margin>
                    </TextField>
                    <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <ChoiceBox fx:id="frequencyChoiceBox" prefHeight="25.0" prefWidth="270.0">
                            <HBox.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </HBox.margin>
                        </ChoiceBox>
                        <Label styleClass="boxSpacing" text="or" textAlignment="CENTER">
                            <HBox.margin>
                                <Insets left="20.0" right="20.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="frequencyTextField" minHeight="30.0" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </HBox>
                    <HBox GridPane.columnIndex="2" GridPane.hgrow="NEVER" GridPane.rowIndex="7" GridPane.vgrow="NEVER">
                        <CheckBox fx:id="lastSourceBox" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false"
                                  styleClass="mylabel" text="Use last source?">
                            <HBox.margin>
                                <Insets left="20.0" right="20.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <Label fx:id="lastSourceLabel" styleClass="mylabel" text="Last Source?">
                            <HBox.margin>
                                <Insets left="20.0" right="20.0" top="5.0"/>
                            </HBox.margin>
                        </Label>
                    </HBox>
                    <Button minWidth="200.0" mnemonicParsing="false" onAction="#setAssignedByButtonClicked"
                            prefHeight="30.0" text="Set Assigned by" GridPane.columnIndex="2" GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets bottom="10.0" left="20.0" top="10.0"/>
                        </GridPane.margin>
                    </Button>
                    <Button fx:id="addAnnotationButton" minWidth="200.0" mnemonicParsing="false"
                            onAction="#addAnnotation" prefHeight="30.0" stylesheets="@phenote.css" text="Add Annotation"
                            GridPane.columnIndex="2" GridPane.rowIndex="4">
                        <GridPane.margin>
                            <Insets left="20.0"/>
                        </GridPane.margin>
                    </Button>
                    <Button fx:id="deleteAnnotationButton" minWidth="200.0" mnemonicParsing="false"
                            onAction="#deleteAnnotation" prefHeight="30.0" stylesheets="@phenote.css"
                            text="Delete Marked Annotation" GridPane.columnIndex="2" GridPane.rowIndex="5">
                        <GridPane.margin>
                            <Insets left="20.0"/>
                        </GridPane.margin>
                    </Button>
                    <Button fx:id="fetchTextMiningButton" minWidth="200.0" mnemonicParsing="false"
                            onAction="#fetchTextMining" prefHeight="30.0" stylesheets="@phenote.css"
                            text="Fetch text mining" GridPane.columnIndex="2" GridPane.rowIndex="6">
                        <GridPane.margin>
                            <Insets bottom="10.0" left="20.0" top="10.0"/>
                        </GridPane.margin>
                    </Button>
                    <Label styleClass="mylabel" text="Modifier" GridPane.rowIndex="6"/>
                    <TextField fx:id="modifiertextField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </GridPane>
                <Separator prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Separator>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>
