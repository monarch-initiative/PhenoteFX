{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CommonDiseaseAnnotation",
  "description": "Annotation model for common disease",
  "type": "object",
  "properties": {

    "disease": {
      "description": "ontology term for disease",
      "type": "object",
      "$ref": "http://jax.org/common_disease_annotation/ontologyterm"
    },

    "phenotypes": {
      "description": "list of phenotypic manifestations of a disease",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "phenotype": {
            "type": "object",
            "description": "ontology term for phenotype",
            "$ref": "http://jax.org/common_disease_annotation/ontologyterm",
            "has": {"type": "boolean"}
          },
          "modifier": {
            "type": "object",
            "$ref": "http://jax.org/common_disease_annotation/ontologyterm"
          },
          "onset": {
            "type": "object",
            "description": "ontology term for onset",
            "$ref": "http://jax.org/common_disease_annotation/ontologyterm"
          },
          "impacted sex": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1
          },
          "frequency": {
            "type": "object",
            "$ref": "http://jax.org/common_disease_annotation/frequency"
          },
          "evidence": {"type": "object"},
          "curation meta": {
            "type": "object",
            "$ref": "http://jax.org/common_disease_annotation/curationmeta"
          }
        }
      }
      },

    "risks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "risk" : {
              "type": "object",
              "properties": {
                "class": {
                  "type": "string",
                  "enum": [
                    "ENVIRONMENT",
                    "OTHER DISEASE",
                    "PHENOTYPE",
                    "GENETIC"              //@TODO: how to represent?
                  ]
                },
                "factor": {
                  "type": "object",
                  "$ref": "http://jax.org/common_disease_annotation/ontologyterm"
                }
              }
            },
            "modifier": {
              "type": "object",
              "$ref": "http://jax.org/common_disease_annotation/ontologyterm"
            },
            "time course": {
              "type": "object"
            },
            "impacted sex": {
              "type": "string"
            },
            "frequency": {
              "type": "object",
              "$ref": "http://jax.org/common_disease_annotation/frequency"
            },
            "magnitude": {
              "type": "object"
            },
            "curation meta": {
              "type": "object",
              "$ref": "http://jax.org/common_disease_annotation/curationmeta"
            }
          }
        }
        },

    "curation meta": {
        "type": "object",
        "$ref": "http://jax.org/common_disease_annotation/curationmeta"
      }
    },

  "required": [
      "disease",
      "phenotypes",
      "curation meta"
    ]
}
